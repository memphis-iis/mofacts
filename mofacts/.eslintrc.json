{
    "env": {
        "browser": true,
        "es2021": true,
        "node": true,
        "meteor": true,
        "mongo": true
    },
    "extends": [
        "google",
        "eslint:recommended"
    ],
    "parserOptions": {
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "rules": {
        "require-jsdoc":"off",
        "max-len": ["warn",{"code":120}],
        "no-multi-str":"off"
    },
    "globals": {
        "_": "readonly",
        "Roles": "readonly",
        "StimSyllables": "readonly",
        "ScheduledTurkMessages": "readonly",
        "ClozeEditHistory": "readonly",
        "ErrorReports": "readonly",
        "DynamicConfig": "readonly",
        "UserProfileData": "readonly",
        "SyncedCron": "readonly",
        "getConfigProperty": "readonly",
        "Papa": "readonly",
        "Chartist": "readonly"
    }
}
